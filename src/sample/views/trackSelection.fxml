<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controllers.ui.TrackSelection">
    <stylesheets>
        <URL value="@../resources/stylesheets/stylesheet.css" />
    </stylesheets>
    <top>
        <Label styleClass="label" text="Choose a track">
            <BorderPane.margin>
                <Insets left="420.0" top="20.0" />
            </BorderPane.margin></Label>
    </top>
    <center>
        <HBox alignment="CENTER">
            <Button onAction="#trackOneSelected" styleClass="card" text="Track Name">
                <HBox.margin>
                    <Insets left="20.0" top="40.0" />
                </HBox.margin></Button>
            <Button onAction="#trackTwoSelected" styleClass="card" text="Track Name">
                <HBox.margin>
                    <Insets left="20.0" top="40.0" />
                </HBox.margin></Button>
            <Button onAction="#trackThreeSelected" styleClass="card" text="Generate Random Track">
                <HBox.margin>
                    <Insets left="20.0" top="40.0" />
                </HBox.margin></Button>
        </HBox>
    </center>
    <bottom>
        <HBox alignment="CENTER">
            <Button onAction="#backButtonClicked" styleClass="button" text="BACK">
                <HBox.margin>
                    <Insets left="30.0" bottom="100" />
                </HBox.margin></Button>
            <Button visible="false" fx:id="nextButton" onAction="#nextButtonClicked" styleClass="button" text="NEXT">
                <HBox.margin>
                    <Insets bottom="100.0" left="720.0" />
                </HBox.margin></Button>
        </HBox>
    </bottom>
</BorderPane>
