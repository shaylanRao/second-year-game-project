<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<BorderPane fx:controller="sample.controllers.ui.MainScreen" xmlns:fx="http://javafx.com/fxml">
    <stylesheets>
        <URL value="@../resources/stylesheets/stylesheet.css"/>
    </stylesheets>
<padding>
    <Insets left="50"/>
</padding>

    <left>
        <VBox alignment="CENTER" spacing="25">
            <Button text="Play" onAction="#playClicked" styleClass="button"/>
            <Button text="Settings" onAction="#settingsClicked" styleClass="button"/>
            <Button text="Controls" onAction="#controlsClicked" styleClass="button"/>
            <Button text="Quit" onAction="#quitClicked" id="quitButton" styleClass="button"/>
            <!--Button text="startGame" onAction="#startGame" id="startGame" styleClass="button"/-->
        </VBox>
    </left>
</BorderPane>
